// Dummy Data (replace with live updates later)
const fixtures = [
  { opponent: "Protea United", date: "2025-09-01", venue: "Home" },
  { opponent: "Soweto Stars", date: "2025-09-08", venue: "Away" },
];

const results = [
  { opponent: "Orlando Juniors", score: "3-1", date: "2025-08-20" },
  { opponent: "Dobsonville FC", score: "1-2", date: "2025-08-15" },
];

const news = [
  { title: "Big Win Against Orlando Juniors!", body: "Ennerdalians secured a 3-1 victory in a thrilling match." },
  { title: "New Training Kit Arrives", body: "Our players will now train in brand new kits sponsored by local partners." }
];

// Render Fixtures
const fixturesList = document.getElementById("fixtures-list");
fixtures.forEach(f => {
  const li = document.createElement("li");
  li.textContent = `${f.date} - vs ${f.opponent} (${f.venue})`;
  fixturesList.appendChild(li);
});

// Render Results
const resultsList = document.getElementById("results-list");
results.forEach(r => {
  const li = document.createElement("li");
  li.textContent = `${r.date} - vs ${r.opponent} : ${r.score}`;
  resultsList.appendChild(li);
});

// Render News
const newsContainer = document.getElementById("news-container");
news.forEach(n => {
  const div = document.createElement("div");
  div.classList.add("news-item");
  div.innerHTML = `<h3>${n.title}</h3><p>${n.body}</p>`;
  newsContainer.appendChild(div);
});
